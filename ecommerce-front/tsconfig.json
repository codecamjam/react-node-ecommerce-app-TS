{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./types"],
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
